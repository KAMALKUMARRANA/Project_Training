@page "/demo"
@using BlazorServerAppDemo2.Models;
@inject ContactService  contactService
<h3>Contact List</h3>

<input placeholder="Enter First Name" @bind="fn" class="form-control"/>
<br />
<input placeholder="Enter Last Name" @bind="ln" class="form-control" />
<br />
<input placeholder="Enter Email" @bind="email" class="form-control" />
<br />
<button @onclick="AddContact" class="btn btn-primary">Add Contact</button>
<br />
@if (contactService.ContactList.Count == 0)
{
    <b>Contact Not Found!</b>
}
else{
    foreach(var con in contactService.ContactList)
    {
        <b>@con.FirstName @con.LastName</b><br />
        <i>@con.Email</i>
        <hr />
    }
}
@code {
    private string fn, ln, email;
    private void AddContact()
    {
        var contact = new Contact
        {
            FirstName=fn,
            LastName=ln,
            Email=email
        };
        contactService.AddContact(contact);

    }
}
